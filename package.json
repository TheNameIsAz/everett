{
  "name": "everett",
  "productName": "everett",
  "version": "1.1.0",
  "author": "aoitaku <aoitaku@gmail.com>",
  "description": "Event command editor for RPG MV",
  "license": "Zlib",
  "main": "./dist/electron/main.js",
  "scripts": {
    "build": "yarn compile && yarn release",
    "build:dir": "yarn build -- --dir -c.compression=store -c.mac.identity=null",
    "build:clean": "del dist/electron/* !.gitkeep",
    "build:web": "webpack --env.production --config .electron-vue webpack.web.config.js",
    "compile": "electron-webpack",
    "release": "electron-builder",
    "dev": "electron-webpack dev",
    "build-parser": "pegjs -o src/renderer/parser.js src/syntax.peg",
    "postinstall": ""
  },
  "build": {
    "directories": {
      "output": "build"
    },
    "files": [
      "dist/electron/**/*"
    ],
    "dmg": {
      "contents": [
        {
          "x": 410,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        },
        {
          "x": 130,
          "y": 150,
          "type": "file"
        }
      ]
    },
    "mac": {
      "icon": "build/icons/icon.icns"
    },
    "win": {
      "icon": "build/icons/icon.ico",
      "target": [
        "portable"
      ]
    }
  },
  "dependencies": {
    "codemirror": "^5.35.0",
    "element-ui": "^2.2.0",
    "source-map-support": "^0.4.17",
    "vue": "^2.3.3",
    "vue-awesome": "^2.3.4",
    "vue-electron": "^1.0.6",
    "vue-router": "^3.0.1"
  },
  "devDependencies": {
    "@types/codemirror": "^0.0.55",
    "babel-core": "^6.26.0",
    "babel-plugin-istanbul": "^4.1.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-register": "^6.24.1",
    "cross-env": "^5.0.5",
    "css-loader": "^0.28.9",
    "del-cli": "^1.1.0",
    "devtron": "^1.4.0",
    "electron": "^1.7.5",
    "electron-builder": "^20.2.0",
    "electron-debug": "^1.4.0",
    "electron-packager": "^8.5.0",
    "electron-webpack": "^1.4.2",
    "electron-webpack-ts": "^1.1.2",
    "electron-webpack-vue": "^1.0.7",
    "node-sass": "^4.7.2",
    "pegjs": "^0.10.0",
    "pug": "^2.0.0-rc.4",
    "pug-loader": "^2.3.0",
    "sass-loader": "^6.0.6",
    "typescript": "^2.5.2",
    "vue-loader": "^12.2.2",
    "vue-property-decorator": "^6.0.0",
    "vue-template-compiler": "^2.5.13",
    "webpack": "^3.5.2"
  }
}
